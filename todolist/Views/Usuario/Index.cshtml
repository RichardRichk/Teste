@model Usuario

@{
    ViewData["Title"] = "Cadastro de Usuário";
}

<h2 class="text-center">Cadastro de Usuário</h2>

<div class="p-4 bg-white rounded shadow">

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success w-100">
            @TempData["MensagemSucesso"]
        </div>
    }

    <!-- Formulário de cadastro de usuário -->
    <form asp-controller="Usuario" asp-action="Create" method="post">
        <!-- Campo para Nome -->
        <div class="form-group">
            <label for="Nome">Nome</label>
            <input asp-for="Nome" type="text" class="form-control" id="Nome" required />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <!-- Campo para E-mail -->
        <div class="form-group">
            <label for="Email">E-mail</label>
            <input asp-for="Email" type="email" class="form-control" id="Email" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Botão de Cadastrar -->
        <button type="submit" class="btn btn-primary w-100 mt-3">Cadastrar</button>
    </form>
</div>
