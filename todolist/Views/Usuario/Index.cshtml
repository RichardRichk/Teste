@model Usuario

@{
    ViewData["Title"] = "Cadastro de Usuário";
}

<h2>Cadastro de Usuário</h2>

<div class="">

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success w-25">
            @TempData["MensagemSucesso"]
        </div>
    }

    <form class="" asp-controller="Usuario" asp-action="Create" method="post">
        <div class="">
            <label for="Nome" class="">Nome</label>
            <input asp-for="Nome" type="text" class="" id="Nome" required />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="">
            <label for="Email" class="">E-mail</label>
            <input asp-for="Email" type="email" class="" id="Email" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <button type="submit" class="">Cadastrar</button>
    </form>

</div>